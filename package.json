{
  "name": "cat-platformer-modularization",
  "version": "2.0.0",
  "description": "Cat Platformer Game - Modular Architecture Migration",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run src/**/*.test.js",
    "test:integration": "vitest run tests/integration/",
    "test:performance": "vitest run tests/performance/",
    "test:e2e": "playwright test",
    "test:cross-browser": "playwright test tests/e2e/cross-browser.test.js",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "test:ci": "npm run test:all && npm run test:e2e",
    "test:physics": "vitest run physics",
    "test:visual": "node test-visual/scripts/run-regression.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "baseline:record": "node scripts/record-baselines.js",
    "baseline:validate": "node scripts/validate-baselines.js",
    "baseline:physics": "vitest run baseline-physics",
    "baseline:visual": "vitest run baseline-visual",
    "visual:capture-baseline": "node test-visual/scripts/capture-baseline.js",
    "visual:capture-issue": "node test-visual/scripts/capture-issue.js",
    "visual:regression": "node test-visual/scripts/run-regression.js",
    "visual:report": "node test-visual/scripts/generate-report.js",
    "migration:status": "node scripts/migration/test-runner.js",
    "migration:test": "node scripts/migration/test-runner.js",
    "migration:validate": "node scripts/migration/test-runner.js",
    "migration:extract": "node scripts/migration/feature-extractor.js interactive",
    "migration:extract-bowls": "node scripts/migration/feature-extractor.js pet-bowls",
    "migration:extract-core": "node scripts/migration/feature-extractor.js core",
    "migration:setup": "./setup-hooks.sh",
    "dev:monolithic": "start index.html",
    "dev:modular": "start src/index.html",
    "build:analyze": "cross-env ANALYZE=true vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "deploy": "node scripts/deploy.js"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "canvas": "^2.11.2",
    "chalk": "^5.3.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdom": "^23.0.0",
    "ora": "^7.0.1",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.55.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^21.6.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^1.2.1",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "game",
    "platformer",
    "vanilla-javascript",
    "modularization",
    "bmad-method"
  ],
  "author": "Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mylesdebastion/Bowie-Buttercup.git"
  },
  "bmad": {
    "projectType": "game",
    "framework": "vanilla-js",
    "architecture": "modular",
    "version": "2.0.0"
  }
}
